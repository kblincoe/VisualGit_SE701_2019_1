{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "semicolon": [true, "always"],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "one-line": [true, "check-open-brace"],
        "indent": [true, "tabs"],
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    }
}